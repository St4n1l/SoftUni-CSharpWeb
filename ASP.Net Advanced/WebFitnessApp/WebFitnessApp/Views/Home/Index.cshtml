@using WebFitnessApp.Data.ViewModels;
@model IEnumerable<WorkoutIndexServiceModel>

@{
    ViewData["Title"] = "Home Page";
    var workouts = Model.ToList();
}
@if (!workouts.Any())
{
    <div class="mt-4 p-5 bg-light">
        <h1 class="display-4">Welcome to the best place for looking at workouts you can do!</h1>
        <p class="lead">
            There are no workouts in the system currently available
        </p>
        <hr class="my-4">
        <p class="lead">
            @if (User.Identity.IsAuthenticated && User.IsInRole("Instructor"))
            {
                <a asp-controller="Workout" asp-action="Add" class="btn btn-primary
btn-lg"
                   role="button">Add workout</a>
            }
            else
            {
            <p class="lead">
                Become an Instructor to add some!
            </p>
            }
        </p>
    </div>
}
<div class="mb-5"></div>
<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < workouts.Count(); i++)
        {
            var workout = workouts[i];
            <div class="carousel-item @(i == 0 ? "active" : string.Empty)">
                <img class="d-block w-100" style="height:500px"
                     src="@workout.ImageUrl" alt="@workout.Name">
                © SoftUni – about.softuni.bg. Copyrighted document. Unauthorized copy, reproduction or use is not permitted.

                Follow us: Page 25 of 69
                <div class="carousel-caption d-none d-md-block">
                    <h5>
                        <a class="btn btn-primary" asp-controller="Workout" aspaction="Details"
                           asp-route-id="@workout.Id"> @workout.Name</a>
                    </h5>
                </div>
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bstarget="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bstarget="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>